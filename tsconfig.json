{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.js",
        "**/*.tsx",
        ".next/types/**/*.ts",
        ".d.ts",
        "pre_build_scripts/**/*.js", // Include JavaScript files in pre_build_scripts directory
        "next.config.js" // Include the Next.js configuration file if needed
    ],
    "exclude": [
        "node_modules"
    ]
}